<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    tools:context=".HistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="379dp">
    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/hi1" />
        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/hii2" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:text="প্রতিষ্ঠানের পরিচিতিঃ এই প্রতিষ্ঠানটি হবিগঞ্জ সদর হতে ৫ কি.মি. দূরে ধুলিয়াখাল থেকে মিরপুর রোডের মধ্যবর্তী গোপায়া নামক স্থানে অবস্থিত। এই প্রতিষ্ঠানটি ২ একর জায়গার উপর দক্ষিন মুখি  হয়ে অবস্থিত প্রতিষ্ঠানটি ভিওি
প্রস্তর স্থাপন ২৭ অক্টোবর ২০০২ খ্রিঃ (১২ ই কার্তিক ১৪০৯ বঙ্গব্দ) এবং কার্যক্রম শুরু ১৭ই সেপ্টেম্বর ২০০৫ ।"
            android:textAlignment="center"
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</ScrollView>









